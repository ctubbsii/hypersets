CC=gcc
CFLAGS=-Wall -std=c99 -O3 -pedantic -pthread
DEBUG=-DDEBUG -g

all: clean hpc2 hpc3 hpc4 hpc5 hpc6 hpc7

debug2: HPC.c
	${CC} ${CFLAGS} ${DEBUG} -o hpc2 -DLEVEL=2 HPC.c
debug3: HPC.c
	${CC} ${CFLAGS} ${DEBUG} -o hpc3 -DLEVEL=3 HPC.c
debug4: HPC.c
	${CC} ${CFLAGS} ${DEBUG} -o hpc4 -DLEVEL=4 HPC.c
debug5: HPC.c
	${CC} ${CFLAGS} ${DEBUG} -o hpc5 -DLEVEL=5 HPC.c
debug6: HPC.c
	${CC} ${CFLAGS} ${DEBUG} -o hpc6 -DLEVEL=6 HPC.c
debug7: HPC.c
	${CC} ${CFLAGS} ${DEBUG} -o hpc7 -DLEVEL=7 HPC.c

hpc2: HPC.c
	${CC} ${CFLAGS} -o hpc2 -DLEVEL=2 HPC.c
hpc3: HPC.c
	${CC} ${CFLAGS} -o hpc3 -DLEVEL=3 HPC.c
hpc4: HPC.c
	${CC} ${CFLAGS} -o hpc4 -DLEVEL=4 HPC.c
hpc5: HPC.c
	${CC} ${CFLAGS} -o hpc5 -DLEVEL=5 HPC.c
hpc6: HPC.c
	${CC} ${CFLAGS} -o hpc6 -DLEVEL=6 HPC.c
hpc7: HPC.c
	${CC} ${CFLAGS} -o hpc7 -DLEVEL=7 HPC.c

clean:
	rm -rf *.o hpc* sec* *~ *.dSYM

benchmark: clean all
	time ./hpc2
	time ./hpc3
	time ./hpc4
	time ./hpc5
	time ./hpc6

